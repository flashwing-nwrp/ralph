# RALPH Discord Agent Bot Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# PROJECT CONFIGURATION
# ===========================================
# Path to the Polymarket AI Bot project (where agents do their work)

RALPH_PROJECT_DIR=E:\Polymarket AI Bot

# Claude Code CLI command (usually "claude" or full path)
CLAUDE_CMD=claude

# ===========================================
# BOT TOKENS (from Discord Developer Portal)
# ===========================================
# Go to https://discord.com/developers/applications
# Select each application → Bot → Copy Token

TUNING_AGENT_TOKEN=paste_your_tuning_agent_token_here
BACKTEST_AGENT_TOKEN=paste_your_backtest_agent_token_here
RISK_AGENT_TOKEN=paste_your_risk_agent_token_here
STRATEGY_AGENT_TOKEN=paste_your_strategy_agent_token_here
DATA_AGENT_TOKEN=paste_your_data_agent_token_here

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Right-click your server → Copy Server ID (Developer Mode must be enabled)

DISCORD_GUILD_ID=paste_your_server_id_here

# ===========================================
# OWNER CONFIGURATION
# ===========================================
# Your Discord user ID - agents recognize you as the operator
# Right-click your username → Copy User ID (Developer Mode must be enabled)
# Agents will respond to your @mentions and give your messages priority

OWNER_USER_ID=paste_your_user_id_here

# ===========================================
# CHANNEL IDS (Optional)
# ===========================================
# Right-click each channel → Copy Channel ID
# These enable auto-posting to specific channels

CHANNEL_RALPH_TEAM=
CHANNEL_TUNING=
CHANNEL_BACKTESTING=
CHANNEL_RISK=
CHANNEL_STRATEGY=
CHANNEL_DATA=
CHANNEL_BOT_LOGS=
CHANNEL_ERROR_LOGS=

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_DIR=logs

# ===========================================
# RECONNECTION SETTINGS
# ===========================================
# How long to wait before reconnecting (seconds)

RECONNECT_DELAY=5
MAX_RECONNECT_ATTEMPTS=10

# ===========================================
# VPS DEPLOYMENT CONFIGURATION
# ===========================================
# Production VPS where the trading bot runs
# Agents can deploy code and manage the bot remotely

# VPS SSH Connection (uses key-based auth, no password)
VPS_HOST=46.252.192.140
VPS_USER=flashwing
VPS_SSH_KEY=~/.ssh/id_rsa
VPS_PORT=22

# Paths on VPS
VPS_PROJECT_DIR=/home/flashwing/polymarket-ai-bot
VPS_VENV_PATH=/home/flashwing/polymarket-ai-bot/venv
VPS_LOG_DIR=/home/flashwing/polymarket-ai-bot/logs

# Deployment settings
VPS_SERVICE_NAME=polymarket-bot
VPS_BRANCH=main

# Other VPS services (for reference)
# polymarket-api.service - FastAPI backend
# polymarket-dashboard.service - Next.js dashboard

# ===========================================
# CLAUDE CODE SETTINGS
# ===========================================
# Skip permission prompts for autonomous operation
# WARNING: This allows agents to execute any action without approval

CLAUDE_SKIP_PERMISSIONS=true

# ===========================================
# ENVIRONMENT MODES
# ===========================================
# local = development on local machine
# vps = production deployment on VPS

ENVIRONMENT=local
