# RALPH Discord Agent Bot Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# BOT TOKENS (from Discord Developer Portal)
# ===========================================
# Go to https://discord.com/developers/applications
# Select each application → Bot → Copy Token

TUNING_AGENT_TOKEN=paste_your_tuning_agent_token_here
BACKTEST_AGENT_TOKEN=paste_your_backtest_agent_token_here
RISK_AGENT_TOKEN=paste_your_risk_agent_token_here
STRATEGY_AGENT_TOKEN=paste_your_strategy_agent_token_here
DATA_AGENT_TOKEN=paste_your_data_agent_token_here

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Right-click your server → Copy Server ID (Developer Mode must be enabled)

DISCORD_GUILD_ID=paste_your_server_id_here

# ===========================================
# CHANNEL IDS (Optional)
# ===========================================
# Right-click each channel → Copy Channel ID
# These enable auto-posting to specific channels

CHANNEL_RALPH_TEAM=
CHANNEL_TUNING=
CHANNEL_BACKTESTING=
CHANNEL_RISK=
CHANNEL_STRATEGY=
CHANNEL_DATA=
CHANNEL_BOT_LOGS=
CHANNEL_ERROR_LOGS=

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_DIR=logs

# ===========================================
# RECONNECTION SETTINGS
# ===========================================
# How long to wait before reconnecting (seconds)

RECONNECT_DELAY=5
MAX_RECONNECT_ATTEMPTS=10
